  <form class="mb-3" id="newProduct">
    <div class="mb-3">
      <input type="number" name="id" id="id" placeholder="ID">
    </div>
    <div class="mb-3">
      <input type="text" name="title" id="title" placeholder="Title">
    </div>
    <div class="mb-3">
      <input type="number" name="price" id="price" placeholder="Price">
    </div>
    <div class="mb-3">
      <input type="text" name="thumbnail" id="thumbnail" placeholder="Thumbnail">
    </div>

    <button id="load">Cargar</button>
  </form>


<div id="listaProductos" class="container mt-3">
    <h2>Lista de Productos</h2>

    {{#if listExists}}

    <table class="table">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">TITLE</th>
        <th scope="col">PRICE</th>
        <th scope="col">IMAGEN</th>
        </tr>
    </thead>
    
    <tbody>
        {{#each products}}
        <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.title}}</td>
        <td>${{this.price}}</td>
        <td><img src={{this.thumbnail}} alt="" style="width:100px; height:100px"></td>
        </tr>
        {{/each}}
        
    </tbody>
    </table>
    {{else}}
    <h1>No hay productos!</h1>
    {{/if}}
    
</div>

