<div class="container">
    <h2>Lista de Productos</h2>

    {{#if listExists}}

    <table class="table">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">TITLE</th>
        <th scope="col">PRICE</th>
        <th scope="col">IMAGEN</th>
        </tr>
    </thead>
    
    <tbody>
        {{#each products}}
        <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.title}}</td>
        <td>${{this.price}}</td>
        <td><img src={{this.thumbnail}} alt="" style="width:100px; height:100px"></td>
        </tr>
        {{/each}}
        
    </tbody>
    </table>
    {{else}}
    <h1>No hay productos!</h1>
    {{/if}}
    
</div>